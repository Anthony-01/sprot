.body-wrapper {
  position: fixed;
  top: 0;
  width: 100%;
  bottom: 50px;
  overflow: hidden;
}
 .header{
  display: flex;
  height: 120px;
  background: #f5f6f7
}
 .header .left {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 30%;
}
.header .left image {
  display: inline-block;
  width: 70px;
  height: 70px;
  border-radius: 50%;
}
 .header .right {
  width: 60%;
  padding: 20px 0 0 0px;
}
 .header .right .name {
  font-weight: 700;

}
.header .right .txt {
  font-size: 14px;
  white-space: "pre";
  color: #666666;
}
.my-coach {
  padding: 20px 0 10px 30rpx; 
  font-weight: 700;
  font-size: 14px;
  color: #333333;
}
.search-wrapper {
  position: relative;
}
.search-wrapper .search-input {
  
  /* border-radius: 2px; */
  border-radius: 12rpx;
  border: 1px solid #e4e4e4;
  /* box-shadow: 0 0 4rpx 1rpx rgba(0.49, 0.49, 0.49, 0.2); */
  box-shadow: 0 0 10rpx 1rpx  rgba(0.49, 0.49, 0.49, 0.2)
}
.search-wrapper .search-icon {
  position: absolute;
  right: 15px;
  top: 10px;
}
.coach-wrapper {
  margin-top: 10px;
  padding: 0 24rpx;
  

}
.coach-wrapper .coach-item {
  display: flex;
  align-items: center;
  height: 112px;
  border: solid 1rpx #e4e4e4;
  box-sizing: border-box;
  /* border-radius: 4px; */
  border-radius: 12rpx;
  /* //border: 1px solid #e4e4e4; */
  box-shadow: 0 0 10rpx 1rpx  rgba(0.49, 0.49, 0.49, 0.2)
}
.coach-wrapper .coach-item .avator{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 30%;
}
.coach-wrapper .coach-item .avator image {
  display: inline-block;
  width: 70px;
  height: 70px;
  border-radius: 50%;
}
.coach-wrapper .coach-item .name {
  display: flex;
  align-items: center;
  line-height: 24px;
  font-weight: 700;
  font-size: 18px;
  color: #333333;
  vertical-align: middle;
}
.coach-wrapper .coach-item .my-icon {
  display: inline-block;
  margin-left: 5px;
}
.coach-wrapper .coach-item .exprience {
  margin-top: 6px;
  font-size: 14px;
  color: #666666;
}



