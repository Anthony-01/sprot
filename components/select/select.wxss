/* components/select/select.wxss */
.com-selectBox{
    width: 708rpx;
    height: 72rpx;
    margin: auto;
}
.com-sContent{
    /* border: 1px solid #e4e4e4; */
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: white;
    font-size: 16px;
    /* position: relative; */
    height: 72rpx;
    line-height: 72rpx;
    border-radius: 12rpx;
    box-shadow: 0 0 10rpx 1rpx rgba(0, 0, 0, 0.1);
}
.com-sImg{
    /* position: absolute;
    right: 10px;
    top: 11px; */
    width: 26px;
    height: 26px;
    transition: all .3s ease;
}
.com-sTxt{
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding:0 20px 0 50rpx;
    font-size: 14px;
}
.com-sList{
    background: white;
    width: inherit;
    position: absolute;
    border: 1px solid #e2e2e2;
    border-radius: 0 0  12rpx 12rpx;
    border-top: none;
    box-sizing: border-box;
    z-index: 3;
    max-height: 120px;
    overflow: auto;
}
.com-sItem{
    height: 72rpx;
    line-height: 72rpx;
    border-top: 1px solid #e2e2e2;
    padding: 0 50rpx;
    text-align: left;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 14px;
}
.com-sItem:first-child{
    border-top: none;
}