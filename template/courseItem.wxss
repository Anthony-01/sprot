

.courseItem {
  width: 708rpx;
  height: 360rpx;
  box-shadow: 0 0 10rpx 1rpx rgba(0, 0, 0, 0.1);
  border-radius: 15rpx;
  margin: 0 auto;
  position: relative;
  top: 10rpx;
}

.courseItem-title {
  position: absolute;
  font-weight: 900;
  font-size: 32rpx;
  left: 50rpx;
  top: 36rpx;
}

.courseItem-status {
  position: absolute;
  left: 50rpx;
  top: 100rpx;
  color: #7d7d7d;
}

.courseItem-time {
  position: absolute;
  left: 50rpx;
  top: 150rpx;
  color: #7d7d7d;
}

.courseItem-myTime {
  position: absolute;
  left: 50rpx;
  top: 200rpx;
  color: #7d7d7d;
}

.courseItem-ui {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  border-top: 1rpx solid #d7d7d7;
}

.courseItem-ui-sign {
  position: absolute;
  left: 0;
  width: 50%;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  color: #52c41a;
  border-right: 1rpx solid #d7d7d7;
}

.courseItem-ui-giveUp {
  position: absolute;
  right: 0;
  width: 50%;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
}