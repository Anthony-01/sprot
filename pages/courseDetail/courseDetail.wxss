@import "../../template/courseItem.wxss";

Page {
  width:100%;
  height: 100%;
}
.my-course-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}
.userinfo {
  /* position: relative; */
  width: 708rpx;
  /* height: 180rpx; */
  padding: 20rpx 0;
  display: flex;
  justify-content: flex-start;
}
.userinfo .left {
  margin-left: 20rpx;
} 
.userinfo-avater {
  /* position: absolute; */
  width: 140rpx;
  height: 140rpx;
  /* left: 72rpx; */
  /* top:50%; */
  border-radius: 50%;
  /* transform:translate(0,-50%); */
}
.userinfo .right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 40rpx;
}


.userinfo-nickname {
  /* position: absolute; */
  /* left: 266rpx; */
  /* top:55%; */
  /* transform:translate(0,-180%); */
  font-weight: 900;
}

.userinfo-type {
  /* position: absolute; */
  /* left: 266rpx; */
  /* top:55%; */
  /* transform:translate(0,-80%); */
  color:#7d7d7d;
  font-size: 26rpx;
}

.userinfo-phone {
  /* position: absolute; */
  /* left: 266rpx; */
  /* top:60%; */
  color:#7d7d7d;
  font-size: 26rpx;
}

.scroll {
  position: relative;
  /* height: 80%; */
  width: 100%;
  margin: 20rpx auto 20rpx;
  padding-bottom: 20rpx;

}
.scroll-item {
  margin-top: 20rpx;
}

.scroll-item:nth-child(1) {
  margin-top: 0;
}
.scroll-item:last-child{
  margin-bottom: 20rpx;
}

.courseItem {
  width: 708rpx;
  height: 360rpx;
  /* box-shadow: 0 0 10rpx 1rpx rgba(0, 0, 0, 0.1); */
  border-radius: 15rpx;
  margin: 0 auto;
  position: relative;
  top: 10rpx;
}

.courseItem-title {
  position: absolute;
  font-weight: 900;
  font-size: 32rpx;
  left: 50rpx;
  top: 36rpx;
}

.courseItem-status {
  position: absolute;
  left: 50rpx;
  top: 100rpx;
  color: #7d7d7d;
}

.courseItem-time {
  position: absolute;
  left: 50rpx;
  top: 150rpx;
  color: #7d7d7d;
}

.courseItem-myTime {
  position: absolute;
  left: 50rpx;
  top: 200rpx;
  color: #7d7d7d;
}

.courseItem-ui {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  border-top: 1rpx solid #d7d7d7;
}

.courseItem-ui-sign {
  position: absolute;
  left: 0;
  width: 50%;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  color: #169bd8;
  border-right: 1rpx solid #d7d7d7;
}

.courseItem-ui-giveUp {
  position: absolute;
  right: 0;
  width: 50%;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  color: #169bd8;
}
.green-color {
  color: #52c41a;
}
.gray-color {
  color: #c9c9c9
}
.red-color {
  color: red;
}
.no-tip {
  color: #999999;
  text-align: center;
  padding: 100rpx;
}
.link {
  color: #169bd8;
  text-decoration: underline;
}


