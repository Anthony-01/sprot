@import "../../template/courseItem.wxss";

Page {
  width:100%;
  height: 100%;
}

.userinfo {
  position: relative;
  width: 708rpx;
  height: 180rpx;
}

.userinfo-avater {
  position: absolute;
  width: 140rpx;
  height: 140rpx;
  left: 72rpx;
  top:50%;
  border-radius: 50%;
  transform:translate(0,-50%);
}

.userinfo-nickname {
  position: absolute;
  left: 266rpx;
  top:55%;
  transform:translate(0,-180%);
  font-weight: 900;
}

.userinfo-type {
  position: absolute;
  left: 266rpx;
  top:55%;
  transform:translate(0,-80%);
  color:#7d7d7d;
  font-size: 26rpx;
}

.userinfo-phone {
  position: absolute;
  left: 266rpx;
  top:60%;
  color:#7d7d7d;
  font-size: 26rpx;
}

.scroll {
  position: relative;
  height: 80%;
  width: 100%;
  margin: 0 auto;
}

.scroll-item {
  margin-bottom: 20rpx;
}
