.coach-wrapper {
  /* margin-top: 10px; */
  padding: 0 24rpx;
  

}
.coach-wrapper .coach-item {
  display: flex;
  margin-top: 10px;
  align-items: center;
  height: 112px;
  /* border-radius: 4px; */
  border-radius: 12rpx;
  border: 1px solid #e4e4e4;
  /* box-shadow: 0 0 4rpx 1rpx rgba(0.49, 0.49, 0.49, 0.2); */
  /* box-shadow: 0 0 10rpx 1rpx  rgba(0.49, 0.49, 0.49, 0.2) */
}
.coach-wrapper .coach-item .avator{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 30%;
}
.coach-wrapper .coach-item .avator image {
  display: inline-block;
  width: 70px;
  height: 70px;
  border-radius: 50%;
}
.coach-wrapper .coach-item .name {
  display: flex;
  align-items: center;
  line-height: 24px;
  font-weight: 700;
  font-size: 18px;
  color: #333333;
  vertical-align: middle;
}
.coach-wrapper .coach-item .my-icon {
  display: inline-block;
  margin-left: 5px;
}
.coach-wrapper .coach-item .exprience {
  margin-top: 6px;
  font-size: 14px;
  color: #666666;
}
