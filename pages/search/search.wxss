.search-wrapper {
  position: relative;
  padding: 0 24rpx;
  margin-top: 20rpx;
}
.search-wrapper .search-input {
  
  /* border-radius: 2px; */
  padding: 14rpx 30rpx;
  border-radius: 12rpx;
  border: 1px solid #e4e4e4;
  font-size: 28rpx;
  /* box-shadow: 0 0 4rpx 1rpx rgba(0.49, 0.49, 0.49, 0.2); */
  /* box-shadow: 0 0 10rpx 1rpx  rgba(0.49, 0.49, 0.49, 0.2) */
