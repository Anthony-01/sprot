/* pages/studentIndex/studentIndex.wxss */
.body-wrapper {
  position: fixed;
  top: 0;
  width: 100%;
  bottom: 50px;
  overflow: hidden;
}
 .header{
  display: flex;
  height: 120px;
  background: #f5f6f7
}
 .header .left {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 30%;
}
.header .left image {
  display: inline-block;
  width: 70px;
  height: 70px;
  border-radius: 50%;
}
 .header .right {
  width: 70%;
  padding: 20px 0 0 25px;
}
 .header .right .name {
  font-weight: 700;

}
.header .right .txt {
  font-size: 14px;
  white-space: "pre";
  color: #666666;
}
.my-coach {
  padding: 20px 0 10px 25px; 
  font-weight: 700;
  font-size: 14px;
  color: #333333;
}
.search-wrapper {
  position: relative;
}
.search-wrapper .search-input {
  border-radius: 2px;
  border: 1px solid #e4e4e4;
}
.search-wrapper .search-icon {
  position: absolute;
  right: 15px;
  top: 10px;
}
.coach-wrapper {
  margin-top: 10px;
  padding: 0 10px;
}
.coach-wrapper .coach-item {
  display: flex;
  align-items: center;
  height: 112px;
  border-radius: 4px;
  border: 1px solid #e4e4e4;
}
.coach-wrapper .coach-item .avator{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 30%;
}
.coach-wrapper .coach-item .avator image {
  display: inline-block;
  width: 70px;
  height: 70px;
  border-radius: 50%;
}
.coach-wrapper .coach-item .name {
  display: flex;
  align-items: center;
  line-height: 24px;
  font-weight: 700;
  font-size: 18px;
  color: #333333;
  vertical-align: middle;
}
.coach-wrapper .coach-item .my-icon {
  display: inline-block;
  margin-left: 5px;
}
.coach-wrapper .coach-item .exprience {
  margin-top: 6px;
  font-size: 14px;
  color: #666666;
}
.tab-bar-wrapper {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 10
}