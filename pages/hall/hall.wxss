@import "../../template/coachItem.wxss";

Page {
  height: 100%;
  width: 100%;
} 

.hall {
  position: absolute;
  height: 100%;
  width: 100%;
}

.userinfo {
  position:relative;
  top: 0;
  width: 100%;
  height: 20%;
  background-color: #f5f6f7
}

.userinfo-avater {
  position: absolute;
  width: 140rpx;
  height: 140rpx;
  left: 72rpx;
  top:50%;
  border-radius: 50%;
  transform:translate(0,-50%);
}

.userinfo-nickname {
  position: absolute;
  left: 266rpx;
  top:50%;
  transform:translate(0,-200%);
  font-weight: 900;
}

.userinfo-systemMsg {
  position: absolute;
  left:266rpx;
  top: 40%;
  color:#7d7d7d;
  font-size: 26rpx;
}

.coach {
  position:relative;
  height: 75%;
  margin-top: 30rpx;
  font-size: 30rpx;
}

.coach-input {
  box-sizing: border-box;
  position: relative;
  top: 10rpx;
  width:698rpx;
  height: 68rpx;
  margin: 25rpx auto;
  text-align: left;
  box-shadow: 0 0 10rpx 1rpx rgba(0, 0, 0, 0.1);
  border-radius: 15rpx;
  padding:0rpx 50rpx;
}

.scroll {
  position: relative;
  height: 95%;
  margin-top: 10rpx;
}

.scroll-view {
  position: relative;
  top: 10rpx;
  margin-bottom: 20rpx;
}

